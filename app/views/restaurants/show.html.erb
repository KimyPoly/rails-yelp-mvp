<div class="border-bottom border-2 border-dark ">
  <h2><%= @restaurant.name%></h2>
  <p><%= "#{(@restaurant.category).capitalize} restaurant "%></p>
  <p><%= "Phone number: #{@restaurant.phone_number}" %></p>
</div>

<p class="border-bottom border-2 border-dark p-2 ">
  <strong>Reviews</strong>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
  </ul>
</p>

<p>
  <i class="fa-sharp fa-solid fa-plus fa-beat"></i>
  <%= link_to "Add a review", "/restaurants/#{params[:id]}/reviews/new" %>
</p>

<p>
  <i class="fa-solid fa-rotate-left"></i>
  <%= link_to "See all restaurants", "/restaurants" %>
</p>
